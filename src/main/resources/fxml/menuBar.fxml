<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar fx:id="root" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chessGame.gui.MenuBar">
  <menus>
    <Menu mnemonicParsing="false" onShowing="#loadFiles" text="Datei">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#openSettings" text="Einstellungen" />
            <MenuItem mnemonicParsing="false" onAction="#openScenarios" text="Öffne Scenarien" />
            <MenuItem mnemonicParsing="false" onAction="#openGameChooser" text="Spiel öffnen" />
            <Menu fx:id="openGameMenu" mnemonicParsing="false" text="Gespeicherte Spiele" />
            <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Spiel speichern" />
            <MenuItem mnemonicParsing="false" onAction="#exit" text="Schließen" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Hilfe">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#openAbout" text="Über ChessGame Deluxe" />
      </items>
    </Menu>
  </menus>
</MenuBar>
